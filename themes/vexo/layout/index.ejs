    .top-btns .btn-1 {
        background-color: #42b983; /* 设置第一个按钮的背景颜色 */
        font-size: 1.2em;
    }

    .top-btns .btn-2 {
        background-color: #007bff; /* 设置第二个按钮的背景颜色 */
        font-size: 1.2em;
    }

    .top-btns a:hover {
        filter: brightness(85%); /* 鼠标悬停时按钮变暗 */
    }


