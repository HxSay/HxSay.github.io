        font-size: 1.5em;
    }
    .top-btns{
        display: flex;
        gap: 100px; /* 设置按钮之间的间距 */
        margin-left: 150px;
        margin-top: 50px;
        transition: transform 0.25s ease-in-out 0.04s, opacity 0.25s ;
        transform: translateX(0px);
        opacity: 1;
    }

    .top-btns a {
        display: inline-block;
        padding: 10px 20px; /* 设置按钮的内边距 */
        border-radius: 50px; /* 设置按钮为椭圆形 */
        color: #fff; /* 设置按钮文本颜色 */
        text-decoration: none; /* 去除按钮的下划线 */
        transition: background-color 0.3s; /* 设置背景颜色变化的过渡效果 */
